<Window x:Class="PublishTool.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" Height="150" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Name="lblMessage" Text="请输入内容：" Margin="0,0,0,10"/>
        <TextBox Name="txtInput" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="60" Margin="0,0,10,0" IsDefault="True" Click="BtnOK_Click"/>
            <Button Content="取消" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
